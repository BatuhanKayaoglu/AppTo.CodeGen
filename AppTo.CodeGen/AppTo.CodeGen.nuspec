<?xml version="1.0"?>
<package>
  <metadata>
    <id>AppTo.CodeGen</id>

    <version>1.0.1</version>

    <title>AppTo.CodeGen CLI Tool</title>

    <description>
      AppTo.CodeGen is a .NET global tool that helps you generate CQRS command and handler classes
      following your application structure conventions. It supports automatic folder creation and 
      customizable naming patterns for Command and Query types.
    </description>

    <authors>Batuhan Kayaoğlu</authors>
    <owners>Batuhan Kayaoğlu</owners>

    <projectUrl>https://github.com/batuhankayaoglu/AppTo.CodeGen</projectUrl>

    <license type="expression">MIT</license>
  
    <tags>dotnet tool codegen cqrs command query generator</tags>

    <packageTypes>
      <packageType name="DotnetTool" />
    </packageTypes>

    <language>en-US</language>

    <dependencies>
      <group targetFramework=".NETCoreApp3.1" />
    </dependencies>

    <icons>
      <icon src="ApptoCodeGen-64.png" />
    </icons>
  </metadata>

  <files>
    <file src="bin\Release\net9.0\publish\**\*" target="tools\net9.0\any" />
    <file src="ApptoCodeGen-64.png" target="" />
    <file src="README.md" target="content" />
  </files>
</package>
